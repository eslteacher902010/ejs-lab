          <% if (item.rating === 5) { %> 💥 <% } %> 
           <%= item.rating %> <%= "⭐".repeat(item.rating) %>: 
           <%= item.details %>
        </a>
      </li>
    <% } %>
  <% }) %>
</ul>


  <h2>Sides</h2>
  
